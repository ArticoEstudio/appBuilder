{# Desplegale con los formatos de documentos #}

{% extends '_Emergente/index.html.twig' %}

{% block listado %}

{% if values.numeroDeFormatos == 1 %}
<script language='JavaScript' type='text/javascript'>
    window.open('{{app.path}}/{{values.controlador}}/Imprimir/{{values.idDocumento}}','Documento');
</script>
{% endif %}

{% if values.numeroDeFormatos > 1 %}
<div class="FormManto">
    <form name="manto" action="" method="POST">
        <input name="controller" value="{{values.controlador}}" type="hidden" />
        <input name="action" id="action" value="Imprimir" type="hidden" />
        <input name="idDocumento" id="idDocumento" value="{{values.idDocumento}}" type="hidden" />
        <div class='Comandos'>
            <div class="Titulo">
                Impresi√≥n de documento:
                {{ macro.select('Documento','Etiqueta','Formato','Formato',none,'',values.formatos,'Select') }}
                <input type="submit" value="Imprimir"/>
            </div>
        </div>
    </form>
</div>
{% endif %}

{% if values.numeroDeFormatos == 0 %}
<p>No se han definido formatos para este documento</p>
{% endif %}
{% endblock %}